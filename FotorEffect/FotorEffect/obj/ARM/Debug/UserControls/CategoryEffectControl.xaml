<UserControl
    x:Class="FotorEffect.UserControls.CategoryEffectControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FotorEffect.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="100"
    d:DesignWidth="100">
    
    <Grid >
        <Image Margin="10" Source="/Assets/effect.png" />
        <Border x:Name="border" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Height="7" Background="Gray" Opacity="0.5" Visibility="{Binding IsSelected}" />
        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Text="{Binding Text}" Foreground="White" />
    </Grid>
</UserControl>

