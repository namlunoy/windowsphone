<UserControl
    x:Class="FotorEffect.UserControls.KhungAnh"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cv="using:FotorEffect.Converters"
    xmlns:local="using:FotorEffect.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="136"
    d:DesignWidth="136">
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

   
        <Rectangle RadiusX="5" RadiusY="5">
            <Rectangle.Fill>
                <ImageBrush Stretch="UniformToFill" ImageSource="{Binding Bitmap}" />
            </Rectangle.Fill>
           
        </Rectangle>

        <Border Background="Gray" CornerRadius="5" Opacity="0.5" Visibility="{Binding Visible}" />

    </Grid>
</UserControl>

